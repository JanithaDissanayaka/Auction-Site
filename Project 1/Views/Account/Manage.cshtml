@model Microsoft.AspNetCore.Identity.IdentityUser

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card p-4 shadow-lg border-0 bg-white">
                <h2 class="section-title text-center mb-4 pb-2" style="border-bottom: 2px solid var(--color-accent); display: inline-block; margin-left: auto; margin-right: auto;">
                    Account Settings
                </h2>

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <form asp-action="Manage" method="post">

                    <div class="form-group mb-4">
                        <label asp-for="UserName" class="form-label fw-bold"></label>
                        <input asp-for="UserName" class="form-control form-control-lg" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <input asp-for="Email" class="form-control form-control-lg bg-light" readonly disabled />
                        <small class="form-text text-muted">Email cannot be changed directly here.</small>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg" style="background-color: var(--color-primary); border-color: var(--color-primary);">
                            <i class="bi bi-save me-2"></i> Save Changes
                        </button>
                    </div>
                </form>

                <hr class="my-4" />

                <div class="d-grid">
                    <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="btn btn-gold btn-lg text-uppercase fw-bold">
                        <i class="bi bi-lock me-2"></i> Change Password
                    </a>
                </div>


                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success mt-4">
                        <i class="bi bi-check-circle-fill me-2"></i> @ViewBag.Message
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}